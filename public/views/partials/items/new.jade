extends ./../../layout

block content
  h1 Enter your gear details

  form.ui.form(ng-submit="createItem()")
    .fields
      .field
        label Name
        input(type='text' ng-model="name")
      .field
        label Brand
        input(type='text' ng-model="brand")
      .field
        label Date Purchased
        input(type='date' ng-model="datePurchased")
      .field
        label Condition
        input(type='text' ng-model="condition")
      .field
        label Price (in dollars)
        input(type='number' ng-model="price")
    .field
      label Image URL
      input(type='url' ng-model="imageUrl")
    .field
      label Description
      textarea(ng-model="description")
    .field
      label Categories
      category-dropdown
    .field
      button(type='submit') Create Item
