extends ./../../layout

block content
  h5(ng-hide="currentUser") Login to Rent this!
  h4(ng-show="currentUser != item.userId")
    a.dark(ng-href='/items/{{item._id}}/contracts/new') Rent it!
  h4(ng-show="currentUser == item.userId")
    a.dark(ng-href='/users/{{item.userId}}/items') Pending Rentals
    |  | 
    a.dark(ng-href='/items/{{item._id}}/edit') Edit
  h1 {{item.name}}
  img.gearimage(ng-src='{{item.imageUrl}}' alt='broken image')
  .info
    .row 
      h6.noTop Description:
      p {{item.description}}
    .row 
      h6 Brand:
      p {{item.brand}}
    .row
      h6 Condition:
      p {{item.condition}}
    .row
      h6 Categories:
      ul
        li(ng-repeat='category in item.categories') {{category}}
        ng-booking-calendar(url="/bower_components/ng-booking-calendar/data/example_data.json" locale="en" first-week-day-sunday="false" num="6" num-months-text="Number of Months:" id="372")
    a(ng-href='/users/{{user_id}}/items') Back
