extends ./../layout

block leftside
  div.white(ng-repeat="category in categories")
    a.white(href="#" ng-click="filterCategory(category)") {{category.name}}
block content
  .listing(ng-repeat="item in items track by $index")
      p
        h6
          a(ng-href='/items/{{item._id}}') {{item.name}}
      p {{item.description}}
      a(href='/items/{{item._id}}' ng-show='item.imageUrl')
        img.gearthumbnail(src='{{item.imageUrl}}' alt='broken image')
